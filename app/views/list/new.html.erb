<%= form_with method: :post, url: '/list', local: true do |f| %>
  <%= f.label :name, "WashList Name" %><br>
  <%= f.text_field :name, required: true %><br>
  <%= f.label :password %><br>
  <%= f.text_field :password, required: true %><br>
  <%= f.label :password_confirmation %><br>
  <%= f.text_field :password_confirmation, required: true %><br>
  <%= f.submit "Create WashList" %>
<% end %>