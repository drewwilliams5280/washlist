<div class="row">
  <div class="column">
    <%= form_with method: :post, url: '/list', local: true do |f| %>
      <%= f.text_field :name, required: true, placeholder: "WashList Name" %><br>
      <%= f.password_field :password, required: true, placeholder: "Password" %><br>
      <%= f.password_field :password_confirmation, required: true, placeholder: "Confirm Password" %><br>
      <%= button_tag(type: 'submit', class: "btn") do %>
        Create WashList
      <% end %>
    <% end %>
  </div>
</div>
