<h1><%= @list.name %></h1>
<% if @list.trucks.empty? %>
  <p>You haven't added any trucks yet.</p>
<% else %>
  <table class="trucks">
    <tr>
      <th>Unit Number</th>
      <th>Unit Type</th>
      <th>Status</th>
      <th>Latest Note</th>
    </tr>
    <tbody class="sortable"> 
      <% @trucks.each do |truck| %>
        <tr id="<%= truck.sortable_id %>"> 
          <td><%= link_to truck.unit_number, "/trucks/#{truck.id}/edit" %></td>
          <td><%= truck.unit_type %></td>
          <td><%= truck.status %></td>
          <td><%= truck.notes.last.text unless truck.notes.empty? %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br><br>
<%= link_to "Add Truck", "/trucks/new" %>
<p>*Drag and drop trucks to reorder list (Desktop version only as of 12/12/2020)*</p>